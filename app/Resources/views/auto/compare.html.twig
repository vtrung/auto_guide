{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}
{% block body %}

    {%  include 'partials/navbar.html' %}



    {#<div class="container">Dumping: {{ dump() }}</div>#}
    {%  include 'partials/header.html' %}

    <div class="container">
        <div class="row">
            <div class="title-container">
                <h1>{{ title }}</h1>
            </div>
        </div>

        <div class="row">
            {{ form_start(form, {'attr':{'id':'carform'}}) }}

            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.carLeft, 'Car 1') }}
                {{ form_errors(form.carLeft) }}
                {{ form_widget(form.carLeft) }}
            </div>

            <div class="form-group">
                {{ form_label(form.carRight, 'Car 2') }}
                {{ form_errors(form.carRight) }}
                {{ form_widget(form.carRight) }}
            </div>
            <div class="form-group">
                {{ form_row(form.save) }}
            </div>

            {{ form_end(form) }}

        </div>
        {% if compare|length > 0 %}
            <div class="row">
                <div>
                    Comparing:
                    <ul>
                        {% for car in compare %}
                            <li>{{ car.year}} {{ car.make }} {{car.model}}: {{ car.mpg }} mpg</li>
                        {% endfor %}
                    </ul>
                </div>

            </div>
            <div class="row">
                <div>
                    <strong>Mileage Difference: {{ comparempg }} mpg</strong>
                </div>
            </div>
        {% endif %}


    </div>

{% endblock %}

